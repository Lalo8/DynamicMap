<h2> Hello + <%= theUser.name%> </h2>

<p>
  Fee:
  <b> $<%= theLaunderer.fee %> </b>
</p>


<h3>
Please find below your organizations :
</h3>

<div class="requestdetails">
	<ul>
		<% organizations.forEach((organization) => {%>
		<ul>
			<li><a href="/organizations/<%=organization.id%>">
				Name: <%=organization.name%> </a></li>
			<li>Description: <%=organization.description%></li>
			<li>Email: <%=organization.contacts.email%></li>
			<li>Phone: <%=organization.contacts.phone%></li>
			<li>Address: <%=organization.address.street%>,
				<%=organization.address.city%>,
				<%=organization.address.zip%>,
				<%=organization.address.country%>
			</li>
			<li>Category: <%=organization.category%></li>
			<li>Status of the request: <%=organization.status%></li>

			<% if (user.isAdmin && organization.status === "pending") { %>
			<form action="/organizations/<%=organization.id%>/edit/" method="POST">
        <button>Edit</button>
      </form>
      <form action="/organizations/<%=organization.id%>/delete" method="POST">
        <button type="submit">Delete</button>
      </form>


			<!--
			<li class="buttonrequest">
				<a class="button is-success is-normal buttonrequest" href="/celebrities/new">Add organization</a>
					<form class="" action="/organizations/<%=organization.id%>/delete" method="POST">
						<input type="submit" class="button" name="button" value="Delete organization">

					</form>
				-->
					<% } %>
			</li>
			<hr>
		</ul>
		<% }) %>
	</ul>
</div>


