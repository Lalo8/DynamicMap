<h2>Sign up</h2>

<!--  to view the error message -->
   <% if (errorMessage) { %>
    <p class="error-message">
      <%= errorMessage %>
    </p>
  <% } %>

<form action="/signup" method="POST" class="form-auth">
	<label>Username
		<input type="text" name="username" placeholder="Your name">
	</label>
	<br><br>
	<label>Password
		<input type="password" name="password" placeholder="Your password"></label>
	<br><br>
	<label>Email
		<input type="email" name="email" placeholder="Your email@email"></label>
	<br><br>
	<label>Status
		<select>
			<option selected value="enterpreneur">Enterpreneur</option>
			<option value="incubatorMember">Incubator's member</option>
		</select></label>
	<br><br>


	<button>Create account</button>
</form>