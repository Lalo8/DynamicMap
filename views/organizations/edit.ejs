<div class="container">
<form action="/organizations/<%=organization._id%>/edit" method="POST">

	<div class="field">
		<label class="label">Organization name</label>
		<div class="control">
			<input type="text" name="name" value="<%=organization.name%>" class="input">
		</div>

	</div>

	<div class="field">
		<label class="label">Description</label>
		<div class="control">
			<input type="text-area" name="description" value="<%=organization.description%>" class='textarea'>
		</div>
	</div>

	<div class="field">
		<lable class="label">Email</label>
			<div class="control has-icons-left">
				<input type="email" name="email" value="<%=organization.contacts.email%>" class="input">
				<span class="icon is-small is-left">
					<i class="fa fa-envelope"></i>
				</span>
			</div>

	</div>

	<div class="field">
		<lable class="label">Phone</label>
			<div class="control">
				<input type="tel" name="phone" value="<%=organization.contacts.phone%>" class="input">
			</div>
	</div>

	<div class="field is-horizontal">
		<div class="field-body">
	<div class="field">
		<lable class="label">Zip</label>
			<div class="control">
				<input type="text" name="zip" value="<%=organization.address.zip%>" class="input">
			</div>
	</div>
	<div class="field">
		<lable class="label">Country</label>
		<p class="control has-icons-left">
			<input type="text" name="country" value="<%=organization.address.country%>" class="input">
		<span class="icon is-small is-left">
			 <i class="fa fa-globe"></i>
		</span>
		</p>
	</div>
	<div class="field">
		<lable class="label">City</label>
			<div class="control">
				<input type="text" name="city" value="<%=organization.address.city%>" class="input">
			</div>
	</div>
	<div class="field">
		<lable class="label">Street</label>
			<div class="control">
				<input type="text" name="street" value="<%=organization.address.street%>" class="input">
			</div>
		</div>
	</div>
</div>

	<div class="field">
		<label class="label">Category</label>
		<div class="control">
			<div class="select">
				<select name="category">
					<option selected value="startup">Startup</option>
					<option value="incubator">Incubator</option>
				</select>
			</div>
		</div>
	</div>

	<div class="field is-horizontal">
		<div class="field-body">
			<div class="field">
				<label class="label">Latitude</label>
				<div class="control">
					<input type="text" name="latitude" class="input" value="<%=organization.location.coordinates[1]%>">
				</div>
			</div>
			<div class="field">
				<label class="label">Longitude</label>
				<div class="control">
					<input type="text" name="longitude" class="input" value="<%=organization.location.coordinates[0]%>">
				</div>
			</div>
		</div>
	</div>

	<div class="field">
	<div class="control">
		<button class="button is-primary">Send information</button>
	</div>
	</div>

</form>
</div>
